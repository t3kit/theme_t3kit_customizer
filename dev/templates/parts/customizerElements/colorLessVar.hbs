{{~#is this.displayCategory "basic"~}}
<div class="customizer-color-picker" data-display="basic">
{{~/is~}}
{{~#is this.displayCategory "advanced"~}}
<div class="customizer-color-picker" data-display="advanced">
{{~/is~}}
{{~#is this.displayCategory "expert"~}}
<div class="customizer-color-picker" data-display="expert">
{{~/is~}}
    <div class="customizer-color-picker__title">
        <span>{{title}}</span>
        {{~#is this.linkedVar true~}}
        <div class="customizer-color-picker__linked-variable">âˆž
            <span class="customizer-color-picker__tooltip">Linked variable</span>
        </div>
        {{~/is~}}
        <a class="js__customizer-color-picker__val customizer-color-picker__val" data-lessvar="{{colorVar}}">
        </a>
        <div class="customizer-color-picker__return-to-default js__customizer-color-picker__return-to-default">
            <span class="customizer-color-picker__tooltip">Return to default value</span>
        </div>
    </div>
</div>
